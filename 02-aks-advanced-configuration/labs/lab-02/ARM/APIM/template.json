{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "publisherEmail": {
        "type": "string"
      },
      "userName": {
        "type": "string"
      }
    },
    "variables": {
      "apimServiceName": "[concat('iac-ws2-', parameters('userName'), '-apim')]",
      "subnetRef": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'iac-ws2-base-vnet', 'apim-net')]"
    },
    "resources": [
      {
        "apiVersion": "2019-12-01",
        "name": "[variables('apimServiceName')]",
        "type": "Microsoft.ApiManagement/service",
        "location": "[resourceGroup().location]",        
        "sku": {
          "name": "Developer",
          "capacity": 1
        },
        "properties": {
          "publisherEmail": "[parameters('publisherEmail')]",
          "publisherName": "[parameters('userName')]",
          "virtualNetworkType": "External",
          "virtualNetworkConfiguration": {
            "subnetResourceId": "[variables('subnetRef')]"
          }
        }
      }
    ]
  }